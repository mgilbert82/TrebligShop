{% extends 'base.html.twig' %}

{% block title %}Valider ma commande | Trebligshop
{% endblock %}

{% block content %}
	<h1>Je passe ma commande</h1>
	<p>Dernière ligne droite avant de se jeter à l'eau</p>
	<hr>
	<div class="row pb-5">
		<div class="col-md-6">
			{% set formHtml %}
			{{ form_start(form, {action: path('app_order_recap')} ) }}
			{{ form_label(form.addresses, 'Choisir son adresse de livraison')}}
			<a href="{{ path('app_account_address_add') }}" class="text text-info">Ajouter une nouvelle adresse</a>
			{{ form_end(form)}}

			{% endset %}
			{{ formHtml|replace({'[br]' : '<br>'})|raw}}
		</div>
		<div class="col-md-6">
			<div class="text-center">
				<b>Récap de ma commande</b><br>
				<p>Retrouver le récapitulatif de vos produits</p>
			</div>
			<div class="order-summary">
				{% for product in cart %}
					<div class="row mt-2 mb-4">
						<div class="col-2">
							<img src="/uploads/product-image/{{ product.product.illustration }}" alt=" {{ product.product.name }}" height="50px">
						</div>
						<div class="col-8 my-auto">
							{{product.product.name}}
							<br>
						</div>
						<div class="col-2 my-auto">
							x
							{{product.quantity}}
						</div>
					</div>
				{% endfor %}
			</div>
		</div>
	</div>
{% endblock %}
