{% extends 'base.html.twig' %}

{% block title %}Mes adresses - TrebligShop
{% endblock %}

{% block content %}
	<a href="{{path('app_account_address_add')}}" class="btn btn-primary float-right">Ajouter une adresse</a>

	<h1>Mes adresses</h1>
	<br>
	<p>
		C'est dans cet espace que vous allez pouvoir gÃ©rer toutes vos adresses
	</p>
	<a href="{{path('app_account')}}" class="mb-5">Retour</a>

	{% if app.user.addresses|length == 0 %}
		<hr>
		<p class="text-center">
			Vous n'avez pas encore d'adresse dans votre compte client, si vous voulez en ajouter une
			<a href="{{path('app_account_address_add')}}">cliquer ici</a>
		</p>
	{%endif %}
	{% for address in app.user.addresses %}
		<div class="card m-3 w-100" style="width: 18rem;">
			<div class="card-body">
				<h5 class="card-title">{{ address.name}}</h5>
				<p class="card-text">
					{{ address.address }},
					<br>
					{{ address.postal }}
					-
					{{ address.city }}
					-
					{{ address.country }}
				</p>
				<a href="{{ path('app_account_address_edit', { 'id': address.id }) }}" class="text-info">Modifier</a>
				|
				<a href="{{ path('app_account_address_delete', { 'id': address.id }) }}" class="text-info">Supprimer</a>
			</div>
		</div>
		{% endfor%}

	{% endblock %}
